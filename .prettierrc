{
	"useTabs": true,
	"singleQuote": true,
	"trailingComma": "none",
	"printWidth": 100,
	"plugins": ["prettier-plugin-svelte"],
	"overrides": [{ "files": "*.svelte", "options": { "parser": "svelte" } }],

	"arrowParens": "avoid",
	"bracketSpacing": true,
	"endOfLine": "lf",
	"semi": false,
	"svelteIndentScriptAndStyle": true,
	"tabWidth": 2
}
